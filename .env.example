# Environment Template for LucianPets
# Copy this to .env and configure your settings

# AI Provider Configuration
VITE_OPENAI_API_KEY=your_openai_key_here
VITE_ANTHROPIC_API_KEY=your_anthropic_key_here

# Server-side API keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# AI Provider Settings
AI_PROVIDER=openai  # 'openai', 'claude', or 'local'
OPENAI_MODEL=gpt-4o
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Smart Port Detection (leave empty for auto-detection)
FRONTEND_PORT=
BACKEND_PORT=
FRONTEND_URL=http://localhost:3000

# LucianPets Configuration
PET_MAX_MEMORY=10000
PET_LEARNING_RATE=0.1
PET_PERSISTENCE_PATH=./data/pets

# Lucian Cognitive Architecture
LUCIAN_PERSISTENCE_PATH=./data/lucian
LUCIAN_LEARNING_RATE=0.08
LUCIAN_MEMORY_DEPTH=1000

# ODIN Sensory System
ODIN_ENABLED=true
ODIN_VISUAL_ENABLED=true
ODIN_AUDIO_ENABLED=true
ODIN_FUSION_ENABLED=true

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug
DEBUG_MODE=true

# AerwareAI Configuration
VITE_APP_TITLE=LucianPets
VITE_COMPANY=AerwareAI
VITE_COMPANY_URL=https://aerware.ai
